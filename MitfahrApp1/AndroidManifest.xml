<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mitfahr"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-permission android:name="android.permission.INTERNET" >
    </uses-permission>
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_logo"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.mitfahr.MainWindow"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.mitfahr.activity_trip"
            android:label="activity_trip"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.mitfahr.ActivityImpressum"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.mitfahr.ActivityOfferRide"
            android:label="@string/title_activity_activity_trip"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysVisible" >
        </activity>
        <activity
            android:name="com.mitfahr.ActivityGetRide"
            android:label="@string/title_activity_activity_ride"
            android:screenOrientation="portrait"
            android:theme="@style/ListFont"
            android:windowSoftInputMode="stateAlwaysVisible" >
        </activity>
        <activity
            android:name="com.mitfahr.ActivityOwnRides"
            android:label="@string/title_activity_activity_ownrides"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.mitfahr.ActivityCheckInput"
            android:label="@string/title_activity_activity_check_input"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.mitfahr.ActivityCheckTrip"
            android:label="@string/title_activity_activity_check_trip"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysVisible" >
        </activity>
        <activity
            android:name="com.mitfahr.ActivityRideList"
            android:screenOrientation="portrait" >
        </activity>
    </application>

</manifest>