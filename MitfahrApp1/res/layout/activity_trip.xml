<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_trip"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.63" >

        <EditText
            android:id="@+id/txt_von"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="59dp"
            android:ems="10"
            android:hint="Abfahrtsort eingeben:" />

        <EditText
            android:id="@+id/txt_bis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/txt_von"
            android:layout_below="@+id/txt_von"
            android:layout_marginTop="33dp"
            android:ems="10" 
            android:hint="Zielort eingeben:">

            <requestFocus />
        </EditText>

        <EditText
            android:id="@+id/txt_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/txt_bis"
            android:layout_below="@+id/txt_bis"
            android:layout_marginTop="28dp"
            android:ems="10"
            android:inputType="date" 
            android:hint="Datum eingeben:"/>

        <EditText
            android:id="@+id/txt_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/txt_date"
            android:layout_below="@+id/txt_date"
            android:layout_marginTop="28dp"
            android:ems="10"
            android:inputType="time" 
            android:hint="Abfahrtszeit eingeben: "/>

        <EditText
            android:id="@+id/txt_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/txt_time"
            android:layout_below="@+id/txt_time"
            android:layout_marginTop="27dp"
            android:ems="10"
            android:inputType="number" 
            android:hint="PlÃ¤tze:"/>

        <EditText
            android:id="@+id/txt_beschreibung"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/txt_sitze"
            android:layout_below="@+id/txt_sitze"
            android:layout_marginTop="28dp"
            android:ems="10"
            android:inputType="textMultiLine"
            android:hint="Beschreibung: " />

    </RelativeLayout>

</LinearLayout>